<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_divide_line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="6dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp">

        <ImageView
            android:id="@+id/emotion_voice"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="@dimen/dp_10"
            android:clickable="true"
            android:scaleType="centerCrop"
            />

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:minHeight="36dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/voice_text"
            style="@style/text_subhead_black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="36dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="按住说话"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/emotion_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/emotion_add"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:clickable="true"
            android:scaleType="centerCrop"
            />

        <com.kaiwukj.android.communityhui.mvp.ui.widget.im.StateButton
            android:id="@+id/emotion_send"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/base_horizontal_left_margin"
            android:padding="1dp"
            android:text="发送"
            android:textColor="@color/write_color"
            android:visibility="gone"
            app:normalBackgroundColor="@color/colorPrimary"
            app:pressedBackgroundColor="@color/colorPrimaryDark"
            app:radius="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_divide_line_color"/>

    <RelativeLayout
        android:id="@+id/emotion_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/write_color"
        android:orientation="vertical"
        android:visibility="gone">


    </RelativeLayout>

</LinearLayout>