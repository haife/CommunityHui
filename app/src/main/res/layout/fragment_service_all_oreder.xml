<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/qtb_mine_service_order"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_bg_color="@color/qmui_config_color_white"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_tool_bar_left_back"
        app:qmui_topbar_need_separator="false"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator_service_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_magic_indicator_height"
        android:overScrollMode="never"
        android:scrollbars="none"/>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_service_order_container"
        style="@style/BaseRecycleViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>