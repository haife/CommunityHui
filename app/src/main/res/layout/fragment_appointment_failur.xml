<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUIEmptyView
        android:id="@+id/empty_view_appoint_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qmui_config_color_white"
        android:fitsSystemWindows="true"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_appointment_result_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_appointment_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@mipmap/icon_appointment_failed"/>

        <TextView
            android:id="@+id/tv_appointment_result_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_appointment_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/appointment_failure"
            android:textColor="@color/common_text_dark_color"
            android:textSize="@dimen/sp_20"/>


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qbtn_appoint_status"
            style="@style/QDRoundButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/tv_appointment_result_status"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="@string/appointment_choice_again"
            android:textSize="@dimen/sp_16"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/rl_appointment_result_container"
        android:background="@color/window_background_color"/>

    <TextView
        android:id="@+id/tv_appointment_choice_again_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_appointment_result_container"
        android:layout_marginLeft="@dimen/base_horizontal_left_margin"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/appointment_choice_again_hint"
        android:textColor="@color/common_text_slight_color"
        android:textSize="@dimen/sp_14"/>

    <androidx.recyclerview.widget.RecyclerView
        style="@style/BaseRecycleViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_appointment_choice_again_hint"
        android:background="@color/write_color"/>

</RelativeLayout>

