<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp_16">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/riv_card_comment_person_info_photo"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/shape_user_head_oval"
        android:clickable="true"
        app:qmui_is_circle="true"
        />

    <TextView
        android:id="@+id/tvr_card_comment_person_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/riv_card_comment_person_info_photo"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/riv_card_comment_person_info_photo"
        android:textColor="@color/home_color_hot_service_text"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:id="@+id/tvr_card_comment_person_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvr_card_comment_person_info_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/tvr_card_comment_person_info_name"
        android:background="@color/app_color_theme"
        android:paddingLeft="@dimen/dp_3"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_3"
        android:paddingBottom="@dimen/dp_2"
        android:text="@string/card_comment_floor_home"
        android:textColor="@color/write_color"
        android:textSize="@dimen/sp_10"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_card_comment_person_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvr_card_comment_person_info_name"
        android:layout_alignParentRight="true"
        android:textColor="@color/home_color_hot_service_text"
        android:textSize="@dimen/sp_13"
        />


    <TextView
        android:id="@+id/tv_card_comment_person_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvr_card_comment_person_info_name"
        android:layout_alignLeft="@+id/tvr_card_comment_person_info_name"
        android:layout_marginTop="@dimen/dp_12"
        android:textColor="@color/common_text_dark_color"
        />

    <TextView
        android:id="@+id/tv_card_comment_person_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_card_comment_person_content"
        android:layout_alignLeft="@+id/tv_card_comment_person_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/common_text_slight_color"
        android:textSize="@dimen/sp_13"/>


    <TextView
        android:id="@+id/tv_card_comment_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_card_comment_person_time"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/tv_card_comment_reply"
        android:textColor="@color/common_text_slight_color"
        android:textSize="@dimen/sp_13"/>

    <TextView
        android:id="@+id/tv_card_comment_reply"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:layout_alignBaseline="@+id/tv_card_comment_person_time"
        android:layout_alignParentRight="true"
        android:gravity="center|top"
        android:text="回复"
        android:textColor="@color/common_text_slight_color"
        android:textSize="@dimen/sp_13"
        android:visibility="gone"/>
</RelativeLayout>