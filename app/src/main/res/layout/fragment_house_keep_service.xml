<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">


    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/qtb_house_keeping"
        style="@style/QDTopBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_bg_color="@color/qmui_config_color_white"
        app:qmui_topbar_left_back_drawable_id="@mipmap/icon_tool_bar_left_back"
        app:qmui_topbar_need_separator="true"
        app:qmui_topbar_title_color="@color/common_text_dark_color"
        app:qmui_topbar_title_text_size="@dimen/sp_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base_horizontal_left_margin"
        android:paddingTop="@dimen/dp_30"
        android:paddingRight="@dimen/base_horizontal_right_margin">

        <RelativeLayout
            android:id="@+id/rl_house_keeping_moon_woman"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:background="@mipmap/bg_house_keeping_moon_woman"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_house_keeping_moon_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_moon_woman_service"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_20"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/home_higher_house_people"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@mipmap/icon_common_next_step_dark"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_house_keeping_carer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@mipmap/bg_house_keeping_carer"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_house_keeping_carer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house_keeping_nursing_subtitle"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_20"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/home_higher_house_people"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@mipmap/icon_common_next_step_dark"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_house_keeping_raise"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@mipmap/bg_house_keeping_raise"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_house_keeping_rearing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house_keeping_nursery_subtitle"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_20"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/home_higher_house_people"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@mipmap/icon_common_next_step_dark"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_house_keeping_prolactin_division"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@mipmap/bg_house_keeping_prolactin_division"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_house_keeping_prolactin_division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house_keeping_prolactin_division_subtitle"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_20"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/home_higher_house_people"
                android:textColor="@color/common_text_dark_color"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_18"
                android:background="@mipmap/icon_common_next_step_dark"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>