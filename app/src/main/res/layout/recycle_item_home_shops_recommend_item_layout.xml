<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/write_color"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_shops_recommend"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_115"
        android:background="@color/window_background_color"/>

    <TextView
        android:id="@+id/tv_home_shops_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:text="鼎详家政"
        android:textColor="@color/common_text_dark_color"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:id="@+id/tv_home_shops_recommend_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_3"
        android:maxLines="1"
        android:text="南昌市青山湖区上海…"
        android:textColor="@color/common_text_dark_color"
        android:textSize="@dimen/sp_13"
        />
</LinearLayout>